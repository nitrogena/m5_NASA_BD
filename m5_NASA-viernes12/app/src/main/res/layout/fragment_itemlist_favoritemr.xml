<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/alistcv_iv_img"
        android:layout_gravity="center_horizontal"
        fresco:actualImageScaleType="fitXY"/>
    -->


    <LinearLayout
        android:layout_weight="0.7"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/fitemlist_favoritemr_iv_img"
            android:layout_margin="@dimen/margin_l"
            android:layout_width="56dp"
            android:layout_height="56dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/fitemlist_favoritemr_tv_camera_fullName"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:textSize="15sp"
            android:layout_weight="1"
            android:id="@+id/fitemlist_favoritemr_tv_earthDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:textSize="15sp"
            android:layout_weight="1"
            android:id="@+id/fitemlist_favoritemr_tv_roverLanding"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>


</LinearLayout>