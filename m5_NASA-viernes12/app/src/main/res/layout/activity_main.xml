<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    tools:context="mx.nitrogena.dadm.mod5.nasa.MainActivity">


    <!-- android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    -->


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:background="?attr/colorPrimary">
    </android.support.v7.widget.Toolbar>



    <ImageView
        android:id="@+id/amain_iv_img"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        tools:src="@mipmap/ic_launcher"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/amain_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        />

    <TextView
        android:id="@+id/amain_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date" />
    <TextView
        android:id="@+id/amain_tv_explanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/explanation" />
    <!--<TextView
        android:id="@+id/amain_tv_hdurl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />-->
    <TextView
        android:id="@+id/amain_tv_mediaType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mediatype" />
    <TextView
        android:id="@+id/amain_tv_serviceVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/serviceversion" />
    <TextView
        android:id="@+id/amain_tv_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/copyright" />


    <!--<TextView
        android:id="@+id/amain_tv_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />-->
    <Button
        android:id="@+id/amain_btn_ir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/amain_btn_ir"/>



</LinearLayout>
